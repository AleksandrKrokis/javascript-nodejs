profile_item_padding_horiz = 25px
profile_small_upic_size = 48px
profile_small_upic_margin = 20px
profile_item_separator = 1px solid #e5e1d0

$profile-edit-icon
	@extend $font-pencil
	color secondary_color

$profile-upic-aside
	min-height profile_small_upic_size
	margin-left profile_small_upic_size + profile_small_upic_margin

$profile-tabs-rounded
	border-radius 3px 3px 0 0

$profile-highlight-background
	background rgba(255, 255, 255, .4)

.profile 
	&__upic
		size-of '../../img/userpic.png'
		margin 0 auto 30px
		position relative

	&__upic-upload
		display block
		width 0
		height 0

	& &__upic-image
		vertical-align bottom
		margin 0

	&__upic-edit
		position absolute
		top 0
		right 0
		background #f1ead9
		font-size 16px
		width 34px
		height 34px
		line-height 34px
		text-align center
		border-radius 50%
		border 4px solid #fff
		cursor pointer

	&__upic-edit::before
		@extend $profile-edit-icon

	&__tabs
		@extend $clearfix
		@extend $profile-tabs-rounded
		background #dcd6c8
		color secondary_color

	&__tab
		float left
		padding 5px 10px
		min-width 140px
		text-align center
		border-left 1px solid #c6c2b6
		font 15px/50px secondary_font

	&__tab:first-child
		border-left 0

	&__tab:last-child
		border-right 1px solid #c6c2b6

	// separate selector with :last-child solves specificity problem
	&__tab_current,
	&__tab_current:last-child
		@extend $profile-tabs-rounded
		@extend $noisy-bg
		border 0
		padding-left 11px

	&__tab_current + &__tab
		border-left 0

	&__section-link:link,
	&__section-link:visited
		color #727272

