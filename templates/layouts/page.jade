doctype html
include ../bem
html
  head
    include ../blocks/head
  body.no-icons
    script require('client/head').fontTest();
    if sitetoolbar
      include ../blocks/sitetoolbar
    .page.page_sidebar_on
      if prev
        a.page__nav.page__nav_prev(href=prev.url, title="назад")
          span.page__nav-text
            span.page__nav-text-shortcut
      if next
        a.page__nav.page__nav_next(href=next.url, title="вперёд")
          span.page__nav-text
            span.page__nav-text-shortcut
      if sidebar
        +b.sidebar.page__sidebar
          +e('button').toggle(onclick="document.querySelector('.page').classList.toggle('page_sidebar_on')")
          +e.inner
            +e.content
              block sidebar
      .page__inner
        article.main
          block main

    script(src=asset("/js/footer.js"))
    script require('client/footer').init();
