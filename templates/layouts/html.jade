//- header + footer + empty body
extends ./base

block html
  head
    script window.currentUser = !{JSON.stringify(user ? user.getInfoFields() : null)};
    block variables
    include ../blocks/head
    block head

  body.no-icons
    script head.fontTest();

  if footer || (footer === undefined)
    .page-wrapper
      block body
    include ../blocks/page-footer
  else
    block body

  script(src=pack("footer", "js"))
  script footer.init();
