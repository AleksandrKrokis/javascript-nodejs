doctype html
include ../bem
html
  head
    include ../blocks/head
  body
    include ../blocks/sitetoolbar
    .page.page_sidebar_on
      if sidebar
        +b.sidebar.page__sidebar
          +e('button').toggle(onclick="document.querySelector('.page').classList.toggle('page_sidebar_on')")
          +e.inner
            +e.content
              block sidebar
      .page__inner
        article.main
          header.main__header
            if breadcrumbs
              include ../blocks/breadcrumbs
            h1.main__header-title!= title
          block content
          //- include ../blocks/prev-next-bottom
          //- include ../blocks/corrector
          if comments
            include ../blocks/comments
      //- include ../blocks/page-footer
      if prev
        a.page__nav.page__nav_prev(href=prev.url, title="назад")
          span.page__nav-text
            span.page__nav-text-shortcut Ctrl + &larr;
      if next
        a.page__nav.page__nav_next(href=next.url, title="вперед")
          span.page__nav-text
            span.page__nav-text-shortcut Ctrl + &rarr;

      //- include ../blocks/scripts
