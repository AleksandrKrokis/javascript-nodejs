        script.
          (function() {
            /* chrome renders embed.svg with a delay, this loads embed later to prevent flickering */
            var img = document.querySelector('img.sitetoolbar__logo')
            var embed = document.createElement('object');
            embed.type='image/svg+xml';

            embed.className = img.className;
            embed.style.cssText = 'left:0;top:0;position:absolute';

            embed.onload = function() {
              embed.onload = null;
              img.style.visibility = 'hidden';
            };
            embed.data = img.src;
            img.parentNode.insertBefore(embed, img);
          })();
