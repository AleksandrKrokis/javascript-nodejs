+e.user-wrap
  //- делаем пользователя кнопкой, так как она только раскрывает меню
  //- и никуда не ведет. Если предполагается функциональность ссылки
  //- потребуются минимальные доработки
  +e('button').user(title=user.displayName, onclick="document.querySelector('.sitetoolbar').classList.toggle('sitetoolbar_user_open')")
    +e('img').userpic(src=user.getPhotoUrl(36,36), alt=user.displayName, width="36", height="36")
    +e('span').user-text= user.displayName
  +e.usermenu-wrap
    +e.usermenu
      +e('ul').usermenu-items
        +e('li').usermenu-item
          +e('a').secondary-link.__usermenu-link(href=user.getProfileUrl()) Публичный профиль
        +e('li').usermenu-item
          +e('a').secondary-link.__usermenu-link(href=user.getProfileUrl() + "/account") Аккаунт
        +e('li').usermenu-item
          +e('a').secondary-link.__usermenu-link(href=user.getProfileUrl() + "/subscriptions") Уведомления
        each tab in user.profileTabsEnabled
          +e('li').usermenu-item
            +e('a').secondary-link.__usermenu-link(href=user.getProfileUrl() + "/" + tab)= profileTabNames[tab]
        +e('li').usermenu-item
          +e('a').secondary-link.__usermenu-link(href="#" data-action-user-logout) Выйти
