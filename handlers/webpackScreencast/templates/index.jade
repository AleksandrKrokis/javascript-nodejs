extends /layouts/main

block append variables
  - var headTitle = 'Скринкаст по Webpack';
  - var sitetoolbar = true
  - var header = true
  - var layout_page_class = "page_contains_header"
  - var mainclass = "main-headered"

block append head
  !=js("webpackScreencast", {defer: true})

block content
  +b.screencast-header._style_webpack

    +e("h1").title Скринкаст
      //- two spaces! one is consumed, one remains
      +e("strong").title-accent  WebPack

    +e("p").description
      | Модульный frontend при помощи Webpack

    +e("ul").buttons

      +e("li").button
        +b("a")(href="https://www.youtube.com/playlist?list=PLDyvV36pndZHfBThhg4Z0822EEG9VGenn").simple-button
          +e.text
            | Смотреть на
            +e("strong")  Youtube
          +e.description  Плейлист 40 записей

      +e("li").button
        +b("a")(href="/webpack-screencast/webpack-mp4-low.zip").simple-button
          +e.text
            | Скачать скринкаст
          +e.description  Компактный размер
            +e("strong").description-accent  (178Mb)

      +e("li").button
        +b("a")(href="/webpack-screencast/webpack-mp4.zip").simple-button
          +e.text
            | Скачать скринкаст
          +e.description  Хорошее качество
            +e("strong").description-accent  (300Mb)

    +e("p").info Если вы где-то выкладываете этот скринкаст (торрент и т.п.), то обязательно давайте ссылку на эту страницу, так как все обновления и важные изменения я публикую здесь.

    +b.share-icons
      +e('span').title= t('Share')
      include /blocks/social-icons


    +e("p").foot Ниже вы можете ознакомиться более детально с содержанием скринкаста

  .main(class='main_width-limit-wide').screencast-content

    include:simpledown index.md

    include /blocks/subscriptionsForm

    form(action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top")
      select(name="currency_code")
        option(value="EUR") EUR
        option(value="USD") USD

      input(type="hidden" name="cmd" value="_donations")
      input(type="hidden" name="business" value="tobias.koppers@googlemail.com")
      input(type="hidden" name="lc" value="US")
      input(type="hidden" name="item_name" value="webpack ref iliakan")
      input(type="hidden" name="no_note" value="0")
      input(type="hidden" name="cn" value="Message to @sokra")
      input(type="hidden" name="no_shipping" value="1")
      input(type="hidden" name="currency_code" value="EUR")
      input(type="hidden" name="bn" value="PP-DonationsBF:btn_donate_LG.gif:NonHosted")
      input(type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_donate_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!")
      img(alt="" border="0" src="https://www.paypalobjects.com/de_DE/i/scr/pixel.gif" width="1" height="1")

    include /blocks/comments

