extends ../layouts/base

// - http://stackoverflow.com/questions/12646451/how-to-pass-variables-between-jade-templates
block variables
  - self.title = 'Современный учебник JavaScript';

  //- layout
  - layout.header = true
  - layout.centeredHeader = true

block content
  +b.intro
    | Перед вами учебник по JavaScript, начиная с основ, включающий в себя много
    | тонкостей и фишек JavaScript/DOM.
  +b.course-search
    +e('form').form(action="#")
      +e.input-wrap._text
        +b.text-input.__query
          +e('input').control(type="text", placeholder="поиск по учебнику")
      +e.input-wrap._submit
        +b('button').submit-button.__submit Найти
