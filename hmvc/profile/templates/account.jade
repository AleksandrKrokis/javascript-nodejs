extends /layouts/main

block content
  h1= title

  img(src=user.getShowPhoto() data-action="photo-change" width=100 height=100)

  ul
    each provider in user.providers
      li
        a(href='#' data-action="provider-remove" data-provider=provider.name) Удалить привязку #{provider.name}

  each name in authProvidersNames
    li
      a(href='#' data-action="provider-add" data-provider=name) Добавить привязку #{name}



  script(src=asset("/js/profile.js"))
  script require('profile/client').init();


