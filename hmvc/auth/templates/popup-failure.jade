doctype html
html
  title Отказ в авторизации
body
  script.
    if (window.opener && window.opener.authModal) {
      window.opener.focus();

      // I hope that decodeURIComponent is the strict inverse of querystring.stringify
      window.opener.authModal.onAuthFailure(decodeURIComponent(location.search.slice(1)));
    }
    window.close();

