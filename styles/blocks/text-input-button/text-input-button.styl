.text-input-button
    display inline-table

    &__input,
    &__button
        display table-cell

        vertical-align top

    &__input
        box-sizing border-box
        width 100%
        padding-right 20px

    &__input .text-input
        width 100%

    @media (max-width: 690px)
        &,
        &__input,
        &__button
            display block

        &__input
            padding-right 0

        &__input .text-input__err
            display none

        &__input .text-input_invalid .text-input__err
            display block

        &__button
            margin-top 10px

        &__button .button,
        &__button .button__text
            display block
            width 100%





