.complex-form
    max-width 780px
    margin auto

    &__step
        border 3px solid #f2e9b0
        border-radius 10px
        display none
        text-align center

    &__step-content
        margin 45px 80px

    &__step_current
        display block

    &__extract

        box-sizing border-box
        margin: 0 auto 17px

    & &__step-title,
    & &__alternate-title
        font 28px secondary_font
        margin 17px 0 11px

    & &__alternate-title
        position relative

        margin 25px 0 10px

        color #333

    &__email
        width 250px

    &__email-note
        font-size 12px
        color #333
        margin 12px auto 0
        line-height 16px
        width 250px

    &__pay-method
        margin 20px auto 29px

    & &__next
        margin 0 auto
        width 620px

    &__next-item
        text-align center

    &__next-item_finished
        display none

    &__next-item_finished + &__next-item
        border 0

    & &__next-item:last-child
        border-radius 0 0 10px 10px

    &[data-order-info-status="pending"] [data-order-form-step-payment]
        display none

    &_cources
        margin-top 40px

    &__submit-line
        margin 50px 20px 30px 20px


    @media tablet
        &
            width auto

        &__step
            border none
            border-radius none

        & &__next
            display none

        &__alternate-title:first-child:before
            position absolute
            top -15px
            left 50%

            width 35px
            height 3px
            margin-left -17px

            background #F5F2F0

            content: ''

        &__email
            display block
            box-sizing border-box

            width auto
            max-width 615px
            margin 20px auto 0
            padding 0 23px

        &__email-note
            font-size 14px

            width auto
            max-width 615px
            padding 0 23px

        &__submit-line
            margin-top 30px


    @media (max-width: 568px)
        &__extract
            padding-left 0
            padding-right 0

            margin-left -10px
            margin-right -10px

        &__email,
        &__email-note
            padding-left 0
            padding-right 0
