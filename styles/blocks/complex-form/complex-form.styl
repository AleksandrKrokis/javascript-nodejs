.complex-form
	&__step
		border 3px solid #f2e9b0
		border-radius 10px
		padding 20px
		// display none
		text-align center

	&__step_current
		display block

	&__extract
		width 480px
		margin auto

	& &__action-title,
	& &__alternate-title
		font 28px secondary_font
		margin 19px 0 14px

	& &__alternate-title
		color #333

	&__email
		width 250px

.complex-form .complex-form__next
	margin 0 auto
	width 620px

.complex-form__next-item
	text-align center

.complex-form__next-item_finished
	display none


.complex-form__next-item_finished + .complex-form__next-item
	border 0


.complex-form .complex-form__next-item:last-child
	border-radius 0 0 10px 10px
