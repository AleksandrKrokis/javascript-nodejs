.course-form
    padding 35px

    border-radius 4px
    border 3px solid #eee
    background #FBFAFA

    & &__title
        margin 0

    & &__text
        font-size 14px

    & .text-input
        width 45%
        margin-right 20px

    @media tablet
        & .button,
        & .text-input
            width 100%
            margin-top 10px

