.bricks
	& &__title
		font 193% secondary_font
		text-align center
		margin 39px 0 15px

	&__container
		-webkit-columns 250px 3
		-moz-columns 250px 3
		columns 250px 3

	&__brick
		margin 0 9px 25px
		-webkit-column-break-inside avoid
		page-break-inside avoid // Fx uses this for columns too
		break-inside avoid


	&__col:first-child &__brick
		margin 0 18px 0 0

	&__col:last-child &__brick
		margin 0 0 0 18px

	& &__brick-title
		font 18px secondary_font
		margin 0 0 -8px

	& &__brick-title-link
		color alternate_link_color

	& &__brick-title-link:hover
		color link_hover_color
		text-decoration: underline

	&__brick-content
		font-size: 12px
		line-height: 1.3
		margin 12px 0

		p
			margin 12px 0
