.sidebar
	width sidebar_width
	background #F5F2F0
	position fixed
	top 60px
	bottom 0
	left 0
	z-index 9999
	overflow auto

	&__inner
		margin 23px 30px 30px

	&__section
		border-bottom 1px solid #d5d2d0
		margin 16px 0
		padding 0 0 16px

	&__section:last-child
		border 0

	&__section-title
		color #C4C2C0
		font-weight 400

	&__link
		color #7E7E7E

	&__link:hover
		text-decoration none

	&__navigation-link
		margin 12px 0

	&__share
		display inline-block
		margin-right 10px
		font-size 18px

	&__share&__share_tw::after
		@extend $font-twitter

	&__share&__share_fb::after
		@extend $font-facebook

	&__share&__share_gp::after
		@extend $font-google
	
	&__share&__share_vk::after
		@extend $font-vkontakte