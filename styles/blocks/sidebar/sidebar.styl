.sidebar
	width sidebar_width - 1
	background #F5F2F0
	border-right 1px solid #d5d2d0

	&__inner
		overflow auto

	&__content
		margin 23px 30px 30px

	& &__toggle
		@extend $button-reset
		position absolute
		top 0
		left 100%
		margin-left 1px
		width 90px
		height 70px
		cursor pointer

	& &__toggle:active
		position absolute

	&__toggle:focus
		outline 0

	&__toggle:hover
		background #f4f4f4

	&__toggle::before
		@extend $font-menu
		font-size 22px
		color #7E7E7E

	&__section
		margin 12px 0
		padding 0 2px
		position relative

	&__section_separator_before
		margin-top 24px

	&__section_separator_before::before
		content ""
		position absolute
		top -12px
		width 35px
		border-top 1px solid #d7d7d4

	&__section_share
		margin-top 18px

	&__section-title
		color #C4C2C0
		font-weight 400
		margin 8px 0

	&__link
		color navigation_link_color

	&__link&__link_arrow
		display block
		position relative
		padding-right 15px

	&__link&__link_arrow::after
		@extend $font-angle-right
		font-size 22px
		position absolute
		right 0

	&__link&__link_arrow:focus
		outline 0

	&__link:hover
		text-decoration none

	&__navigation-link
		margin 8px 0
		line-height 1.1 // чтобы соответствовать макету

	&__share
		margin 8px 20px 0 0

	@media tablet
		&__toggle
			display none
