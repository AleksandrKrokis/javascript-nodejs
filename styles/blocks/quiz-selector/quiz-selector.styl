.quiz-selector
    background #f2f2dc url("data:image/png;base64,");
    border-radius 3px

    & ul,
    & li,
    & ul li,
    & h3,
    & p
        padding 0
        margin 0
        line-height auto

    & ul li:before
        display none

    & &__item
        font-size 13px

        padding 25px 30px

        white-space nowrap

        border-bottom 1px solid #dbddbc

    & &__item:last-child
        border none

    &__text,
    &__start
        display inline-block

        box-sizing border-box

        vertical-align middle

    &__text
        width 60%
        padding-right 20px

        white-space normal

    &__start
        width 40%
        min-width 230px
        text-align right

    & &__title
        font-family  secondary_font
        font-size 18px

        margin-bottom 10px

        color: #b20000

@media tablet
    .quiz-selector

        & &__item
            padding-bottom 15px

        &__text,
        &__start
            width auto
            display block

        &__start
            text-align left
            margin-top 15px
