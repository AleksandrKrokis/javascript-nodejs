.task-single
	margin 22px 0

	&__back
		font-size 14px

	&__back u,
	&__back:hover
		text-decoration none

	&__back:hover u
		text-decoration underline

	&__back::before
		content: '← '

	&__task
		border-top 1px solid #eee
		margin-top 17px

	&__task .task__header
		margin-top 24px

	&__task .task__header,
	&__task .task__title-wrap,
	&__task .task__header-aside
		display block

	&__task .task__title
		font-size 28px

	&__task .task__header-aside
		padding 0
		margin-top 14px

	&__task .task__solution::after
		margin-top 6px

	&__task .task__content
		font-size 16px

	&__task .task__content,
	&__task .task__content p,
	&__task .task__content ul,
	&__task .task__content ol,
	&__task .task__content figure,
	&__task .task__content .code-example
	&__task .task__content .codebox,
	&__task .task__content .complex-code
		margin 22px 0