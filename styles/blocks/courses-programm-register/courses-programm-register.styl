.courses-programm-register
    margin-top 40px

    border-radius 5px
    background #f7f6ea

    & h2&__title
        padding 10px

        color #b20000
        border-bottom 1px solid #e4e0d2

    & h2&__title,
    & h3&__course-title
        margin 0

        font-family secondary_font
        line-height initial

    & ul&__courses,
    & li&__course,
    & p&__course-text
        padding 0
        margin 0
        list-style none

    & li&__course:before
        display none

        content: '';

    & ul&__courses
        text-align left

    & li&__course
        padding 25px

        border-bottom 1px solid #e4e0d2

    & li&__course:last-child
        border none

    &__course-title .link
        color link_color
        text-decoration underline

    &__course-title .link:hover,
    &__course-title .link:visited:hover
        color link_hover_color

    &__course-bage
        font 11px/14px font

        display inline-block

        padding 3px 10px
        margin-left 10px

        white-space nowrap

        color #fff
        background #ffaa42
        border-radius 14px

    & p&__course-text
        margin-top 5px
