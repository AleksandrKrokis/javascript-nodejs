.tasks
	margin-bottom 60px

	& &__title
		font-size 28px
		margin-bottom 19px
		padding-left 35px

	& &__title-anchor::before
		@extend $font-ok

	&__title-anchor::before
		transition unquote('color') animation_duration
		display inline-block
		width 35px
		color #80BD57
		right auto
		left 0
		opacity 1

	&__title-anchor:hover::before
		// явно используем lighten вместо hoverize, чтобы цвета текста и иконки менялись гармонично
		color lighten(#80BD57, hover_color_correction)

	&__task
		border-top 1px solid #eee
		margin 19px 0
