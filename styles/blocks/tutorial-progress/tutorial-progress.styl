.tutorial-progress
    display none

    &[value]
        display: block

        /* Reset the default appearance */
        appearance none

        width 100%
        height 4px

        color #efecea
        background #efecea
        border: none

    &[value]::-webkit-progress-bar
        background #efecea

    &[value]::-webkit-progress-value
        background #b8d0b1

    &[value]::-moz-progress-bar
        background #b8d0b1