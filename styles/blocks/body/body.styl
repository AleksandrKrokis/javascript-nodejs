body
	font size/lineheight font
	text-size-adjust none
	color color
	background background
	margin 0

//- просто так удобнее, пусть будет
.sitetoolbar_show .sitetoolbar
	transform translateY(0)

.notification_hidden .sitetoolbar
	transform translateY(top_notification_height * -1)

.notification_on .page__sidebar,
.notification_on .page__nav,
.notification_on .page__sitemap
	top 60px + top_notification_height

.notification_on .page .page__inner
	margin-top top_notification_height

.notification_hidden .page__sidebar,
.notification_hidden .page__nav,
.notification_hidden .page__sitemap
	top 60px

.sitetoolbar_show .page__sidebar,
.sitetoolbar_show .page__nav,
.sitetoolbar_show .page__sitemap
	top 60px
