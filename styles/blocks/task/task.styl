.task
	margin-top 30px

	&__header
		display table
		width 100%

	&__title,
	&__info
		display table-cell
		text-align left
		vertical-align top

	&__title
		font 700 40px/40px secondary_font
		margin 0
		padding-right 30px
		width 100%

	&__info
		white-space nowrap
		padding-top 14px
		color #656565

	&__number
		margin-right 20px

	&__content
		margin 22px 0