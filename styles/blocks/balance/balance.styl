.balance
	position relative
	margin 38px 0
	border 4px solid #F5F2F0
	border-radius 2px
	overflow hidden // simple clearfix, should be OK here

	& &__title
		margin 0 0 14px

	& &__list
		padding-left 19px

	& &__list-item
		margin 12px 0

	// если блок содержит и плюсы и минусы
	&__pluses:nth-last-child(2),
	&__minuses:nth-child(2)
		float left
		width 50%
		box-sizing border-box

	&__pluses:nth-last-child(2) &__content
		margin 20px 35px 30px 23px

	&__minuses:nth-child(2) &__content
		margin 20px 23px 30px 35px

	&__minuses:nth-child(2)::before
		content ""
		border-left 2px solid #F5F2F0
		position absolute
		top 25px
		bottom 25px
		left 50%
		margin-left -1px

	// если в блоке только плюсы или только минусы
	&__pluses:first-child:last-child &__content
	&__minuses:first-child:last-child &__content
		margin 20px 35px 30px 23px

	& &__pluses &__list-item::before
		color #8DC082

	& &__minuses &__list-item::before
		color #C13335

	&__content,
	&__content p,
	&__content ul,
	&__content ol,
	&__content figure,
	&__content .code-example,
	&__content .codebox,
	&__content .code-tabs
		margin 14px 0
