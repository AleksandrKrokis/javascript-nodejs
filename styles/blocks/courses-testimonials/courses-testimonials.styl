.courses-testimonials

    &__wrapper
        position relative

    &__body
        box-sizing border-box
        overflow hidden
        position relative

        margin 0 90px

    .main ul&__testimonials
        display flex

        position relative

        margin 0
        padding 0

        transition transform 0.5s cubic-bezier(0.23, 1, 0.32, 1)

    .main li&__testimonial
        flex 1 0 100%

        display table
        width 100%
        min-height 200px

        background red

        margin 0
        padding 0


    .main li&__testimonial:before
        display none
        content ''

    &__main,
    &__user
        display table-cell

        vertical-align top

    &__main
        padding 20px 40px 30px 30px

        background #F6F4EB

    &__main .rating
        text-align center

    &__user
        width .1%
        min-width 165px
        padding 20px 0

        text-align center

        background #EDE9D8

    &__userpic
        position relative
        overflow hidden

    &__userpic:before
        position absolute
        left -42px
        top 40px

        width 45px
        height 45px

        background #F6F4EB

        transform rotate(134deg) skew(21deg, 21deg)

        content: ''

    &__userpic-img
        display block

        width 86px
        height 86px

        margin 0 auto

    &__username,
    &__country
        margin-top 5px
        padding 0 20px

    &__username
        font-weight bold

        line-height initial

    &__username-link
        color #3B86C4

    &__country
        white-space nowrap

        color #999

    &__country-flag,
    &__country-text
        vertical-align middle

    &__country-flag
        margin-right 7px

    .main p&__testimonial-text
        margin 10px 0 0 0
        padding 0

        line-height initial

    &__cut
        color link_color;

        cursor pointer
        text-decoration underline

    &__cut:hover
        color link_hover_color

    &__cuted
        display none

    &__all
        position absolute
        right 90px
        top -25px

        color #3B86C4

    &__arr
        position absolute
        top 65px
        overflow hidden

        width 34px
        height 66px

        cursor pointer

    &__arr:after
        position absolute
        top 9px

        width 48px
        height 48px

        background #EDE9D8

        content ''
        transform rotate(45deg)

    &__arr_prev
        left 10px

    &__arr_next
        right 10px

    &__arr_prev:after
        left 10px

    &__arr_next:after
        left -24px
