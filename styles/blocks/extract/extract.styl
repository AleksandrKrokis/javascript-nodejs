.extract
	background #f5f2f0
	text-align left
	padding 0 0 30px
	border-radius 3px

	&_small
		font-size 13px
		padding 8px 23px 11px
		line-height 19px
		border-radius 0

	& &__header
		background #dddddd
		text-align center
		color #191e1e
		margin-bottom 21px
		font-size 28px
		padding 7px 27px 14px
		border-radius 3px 3px 0 0

	&__title
		color secondary_color
		font 18px secondary_font

	&__dates
		font-weight 700

	&__dates,
	&__info
		margin 0 27px
		line-height 26px

	&_small &__dates,
	&_small &__info
		margin 0

	&__wrap
		display table
		width 100%

	&__content,
	&__aside
		display table-cell
		vertical-align middle
		padding 7px 0

	&__content
		width 100%

	&__aside_price
		padding-right 4em
		font-size 14px

	&__aside_price .price__secondary
		position absolute
		left 100%
		bottom 0
		margin 0 0 3px 7px
		white-space nowrap

	&__aside_center
		text-align center

	&__price
		margin-top 3px
		position relative
