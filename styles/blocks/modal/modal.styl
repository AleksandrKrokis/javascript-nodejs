.modal:before
  content ""
  display block
  background rgba(0, 0, 0, 0.6)
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  z-index 1001


.modal-dialog
  position fixed
  top 50%
  left 50%
  transform: translate(-50%, -50%);
  z-index 9999

// todo: also hide closing button
.modal-overlay:after
  content " "
  position absolute
  left 0
  right 0
  top 0
  bottom 0
  z-index 100000
  background white
  opacity 0.2
