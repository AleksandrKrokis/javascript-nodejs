.lessons-list
	@extend $clearfix
	margin 22px 0
	overflow hidden

	ol&__lessons // усиливаем селекторы тегом
		list-style none
		padding 0
		counter-reset lesson
		margin -1px 0 0 -1px

	& li&__lesson
		margin 0

	&__lesson
		font 700 16px/22px secondary_font
		position relative
		float left
		width 175px
		height 70px
		border solid #ccc
		border-width 1px 0 0 1px
		background #f7f6ea
		padding 10px 20px 10px 40px

	&__lesson::before
		content counter(lesson) '.'
		counter-increment lesson
		color #959595
		position absolute
		right 204px

	&__lesson::after
		content ""
		position absolute
		top 100%
		left -1px
		width 100%
		height 100%
		border solid #ccc
		border-width 1px 0 0 1px
		background #f7f6ea
		z-index -1

	&__link
		color alternate_link_color
