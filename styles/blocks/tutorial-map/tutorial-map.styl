.tutorial-map
	margin 50px 80px

	&__filter
		margin 25px 0 43px
		display table

	&__input-wrap,
	&__option,
	&__layout
		display table-cell

	&__input-wrap
		width 100%

	&__option
		white-space nowrap
		padding 0 25px

	&__option-control
		vertical-align baseline
		width 16px
		height 16px

	&__option-label
		color #7E7E7E

	//- избавляемся от некликабельной области между флажком и подписью
	&__option-control
		margin-right 0

	&__option-label
		padding-left 11px

	&__singlecol,
	&__multicol
		width 33px
		line-height 32px

	&__singlecol::after
		@extend $font-single-col

	&__multicol::after
		@extend $font-multi-col

	&__input
		width 100%
		margin-top 12px
		position relative

	& &__col-title
		font 18px secondary_font
		line-height 1.3
		margin 0 0 27px 0
		padding 0

	// Заимствуем фрагмент стилей из .main
	// чтобы можно было использовать вне контекста .main
	// TODO: избавиться от копи-паста
	ul,
	ol
		padding-left 21px
		margin 22px 0 // уравниваем с абзацными отступами

		> li
			margin: .3em 0

	ul > li::before
		content "●"
		position absolute
		margin-left -20px
		color #B2C1C1

	& &__col-title,
	& &__items
		padding-right 25px

	& &__items
		margin-top 27px
		padding-left 10px

	& &__item
		font-weight 700
		margin-top 22px

	& &__item::before
		content "▪"
		color #d16666
		font-size 20px
		margin 0 0 0 -12px

	& &__sub-items
		margin-top 10px
		padding-left 15px

	& &__sub-item
		font-weight 400
		font-size 13px
		margin 5px 0

	& &__sub-item::before
		content "•"
		color #bbb
		font-size 25px
		margin 0 0 0 -15px

	& &__sub-sub-items
		display none
		padding 0 0 0 15px
		margin 0

	& &__sub-sub-item
		margin 3px 0

	& &__sub-sub-item::before
		content "✓"
		color #66ba7a
		font-size inherit
		margin 0 0 0 -14px

	&__note
		font-size 85%
		color #656565

	&_singlecol &__section.columns__col // усиливаем селектор классом columns__col из-за псевдокласса в блоке columns
			display block
			width auto

	@media tablet
		margin 2px 20px 20px

		&__option-control
			margin-left 0

		&__filter
			margin-top 2px

		&__filter,
		&__input-wrap,
		&__option
			display block

		.modal &__input-wrap
			width calc(100% - 50px)

		&__option
			padding 10px 0 0

		&__layout
			display none

		&__section:not(:first-child)
			margin-top 30px

		& &__section.columns__col // усиливаем селектор классом columns__col из-за псевдокласса в блоке columns
			display block
			width auto

		& &__col-title
			margin-bottom 15px

		& &__items,
		& &__item
			margin-top 15px


.tutorial-map_show-tasks
	.tutorial-map__sub-sub-items
		display block

