$login-form-additional-info
	font-size 14px
	padding 11px 15px
	border-radius 4px
	border 1px solid

.login-form
	width 410px
	background background
	padding-top 20px

	&__line
		padding 0 30px
		margin-bottom 19px
		font-size 14px
		position relative

	&__note
		color #656565

	&__error
		@extend $login-form-additional-info
		background #F2DEDE
		border-color #E7C9C9

	&__warning
		@extend $login-form-additional-info
		background #FCF8E1
		border-color #ECE6C4

	&__info
		@extend $login-form-additional-info
		background #D9EDF8
		border-color #C8E0ED

	&__success
		@extend $login-form-additional-info
		background #DFF0D6
		border-color #D1E7C6

	&__header,
	&__footer
		display table

	&__title,
	&__header-aside,
	&__button,
	&__footer-link
		display table-cell

	&__aside,
	&__footer-link
		white-space nowrap

	&__title,
	&__button
		width 100%
		padding-right 10px

	&__title
		font 700 26px secondary_font

	&__label
		color color

	&__input
		width 100%
		margin-top 10px
		position relative

	&__input_invalid
		border-color #e62e29
		color #e62e29

	&__link,
	&__link:visited
		color alternate_link_color

	&__button-link
		@extend $link-button

	&__forgot
		line-height 34px

	&__forgot:active
		position absolute

	&__footer
		margin-top 25px

	&__separator
		color #999
		margin 0 1ex

	&__submit
		min-width 110px
		outline none
		margin 0

	&__social-logins
		background #eee
		line-height 0
		margin-top 30px
		padding-top 16px
		padding-bottom 35px

	&__social-logins-title
		font 700 18px/normal secondary_font
		margin-bottom 15px

	&__social-login
		margin 0 6px 10px 0

	&__close,
	&__close:active
		position absolute
		top -15px
		right -15px

	&__close:focus
		outline none

	& p
		margin 10px 0

