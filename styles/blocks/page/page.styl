.page
	position: relative
	z-index: 0
	padding 0
	transition padding animation_duration

	&_sidebar_on
		padding-left sidebar_width

	&__sidebar
		position fixed
		top 60px
		bottom 0
		left 0
		transform translateX(-100%)

	// используется при переключении видимости панели навигации
	&__inner
		margin 0
		padding 0 120px
		transition margin-top animation_duration

	&__sidebar
		transition transform animation_duration

	// для отображения/скрытия сайдбара переключаем класс .page_sidebar_on у блока .page
	&_sidebar_on &__sidebar
		transform translateX(0)

	&__nav
		position fixed
		top 50%
		width 81px
		height 90px
		margin-top -45px
		outline 0

	& &__nav
		color #7d7d7d;

	&__nav:hover
		text-decoration none

	&__nav_prev
		left 0
		transition transform animation_duration, top animation_duration

	&__nav-text
		font-size 13px
		position absolute
		top 50%
		margin-top -33px
		box-sizing border-box
		width 100%
		text-align center
		white-space nowrap

	&__nav-text-shortcut
		color #c1c1c0
		visibility hidden

	&__nav-text-arr
		position relative
		top -1px // мелочь, но смотрится аккуратнее

	&__nav:hover &__nav-text-shortcut
		visibility visible

	&__nav-text::before
		display block
		margin-bottom 5px
		font-size 36px
		min-height 68px
		line-height 64px
		color #7e7e7e

	&__nav:hover &__nav-text::before
		background rgba(216, 216, 216, .3)

	&__nav_prev &__nav-text::before
		@extend $font-angle-left

	&_sidebar_on &__nav_prev
		transform translateX(sidebar_width)

	&__nav_next
		right 0
		transition top animation_duration

	&__nav_next &__nav-text::before
		@extend $font-angle-right

	@media tablet
		&,
		&_sidebar_on
			padding 0

		& &__sidebar,
		& &__inner::after
			display none

		&__inner
			padding 0 20px

		& &__tutorial-map
			left 20px
			right 20px

		&__nav
			display none

