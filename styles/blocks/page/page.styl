
.page
	position: relative
	z-index: 0
	padding 0
	transition padding animation_duration

	&_sidebar_on
		padding-left sidebar_width


	// .sitetoolbar + & &__sidebar
	//	top 60px

	&__sidebar
		top 0

	&__sidebar
		position absolute
		bottom 0
		left 0
		transform translateX(-100%)
		transition-property transform
		transition-duration animation_duration

	// для отображения/скрытия сайдбара переключаем класс .page_sidebar_on у блока .page
	&_sidebar_on &__sidebar
		transform translateX(0)

	// используется при переключении видимости панели навигации
	&__inner
		margin 0
		padding 0 120px
		transition margin-top animation_duration

	// добавляем отступ только если навигация присутствует
	// .sitetoolbar + & &__inner
	//	margin-top 60px

	.notification_on & &__inner
		margin-top 60px + top_notification_height

	.notification_hidden & &__inner
		margin-top 60px

	.sitetoolbar_hidden & &__inner
		margin-top 0

	.sitetoolbar + & &__nav
		top 60px

	&__nav
		// fixme
		display none
		position fixed
		top 0
		bottom 0
		width 90px
		outline 0

	& &__nav
		color #7d7d7d;

	&__nav:hover
		background rgba(216, 216, 216, .15)
		text-decoration none

	&__nav_prev
		left 0
		transition transform animation_duration, top animation_duration

	&__nav-text
		font-size 16px
		position absolute
		top 50%
		margin-top -40px
		width 80px
		padding 5px
		text-align center
		white-space nowrap

	&__nav-text-shortcut
		visibility hidden
		color #8B8987

	&__nav-text-arr
		position relative
		top -1px // мелочь, но смотрится аккуратнее

	&__nav:hover &__nav-text-shortcut
		visibility visible

	&__nav-text::before
		display block
		margin-bottom 17px
		font-size 36px
		min-height 36px
		line-height 1
		color #7e7e7e

	&__nav_prev &__nav-text::before
		@extend $font-angle-left

	&_sidebar_on &__nav_prev
		transform translateX(sidebar_width)

	&__nav_next
		right 0
		transition top animation_duration

	&__nav_next &__nav-text::before
		@extend $font-angle-right

	// состояния при показе уведомления в панели навигации
	.notification_on & &__sidebar,
	.notification_on & &__nav
		top 60px + top_notification_height

	.notification_hidden & &__sidebar,
	.notification_hidden & &__nav
		top 60px

	.sitetoolbar_hidden & &__sidebar,
	.sitetoolbar_hidden & &__nav
		top 0

	@media tablet
		&,
		&_sidebar_on
			padding 0

		& &__sidebar
			display none

		&__inner
			margin-top 60px
			padding 0 40px

		& &__tutorial-map
			left 40px
			right 40px

		&__nav
			display none

