.page
	position: relative
	z-index: 0
	// padding 0 200px
	padding 0 60px
	transition padding .5s

	body &_sidebar_on // повышаем специфичность, чтобы перекрыть media-правила
		padding-left sidebar_width + 30px

	&__sidebar
		margin-left sidebar_width * -1
		transition margin-left .5s

	// для отображения/скрытия сайдбара переключаем класс .page_sidebar_on у блока .page
	&_sidebar_on &__sidebar
		margin-left 0

	&_sitemap
		padding 0 60px

	&__prev,
	&__next
		position fixed
		top 50%
		margin-top -50px
		width 30px
		padding 5px
		line-height 90px
		font-size 36px
		text-align center
		border-radius 10px

	& &__prev,
	& &__next
		color #7d7d7d;

	&__prev:hover,
	&__next:hover
		background rgba(0, 0, 0, .2)
		text-decoration none

	&__prev
		left 30px
		transition left .5s

	&__prev::before
		@extend $font-angle-left

	&_sidebar_on &__prev
		left 280px

	&__next
		right 30px

	&__next::before
		@extend $font-angle-right

	@media tablet
		body &_sidebar_on // повышаем специфичность, чтобы перекрыть media-правила
			padding-left 200px // TODO: уточнить, как располагать контент при разной ширине окна и разных media
