.page
	position: relative
	z-index: 0
	padding 0 200px
	transition padding .5s

	body &_sidebar_on // повышаем специфичность, чтобы перекрыть media-правила
		padding-left sidebar_width

	&__sidebar
		margin-left sidebar_width * -1
		transition margin-left .5s

	// для отображения/скрытия сайдбара переключаем класс .page_sidebar_on у блока .page
	&_sidebar_on &__sidebar
		margin-left 0

	&__inner
		@extend $min-max-width
		@extend $center

	@media tablet
		body &_sidebar_on // повышаем специфичность, чтобы перекрыть media-правила
			padding-left 200px // TODO: уточнить, как располагать контент при разной ширине окна и разных media