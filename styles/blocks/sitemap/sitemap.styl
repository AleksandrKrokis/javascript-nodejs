.sitemap
	width 100%

	& &__col-title
		font-size 18px
		line-height 1.3
		margin 0 0 27px 0
		padding 0

	& &__col-title,
	& &__items
		padding-right 25px

	& &__items
		margin-top 27px
		padding-left 10px

	& &__item
		font-weight 700
		margin-top 22px

	& &__item::before
		content "▪"
		color #d16666
		font-size 20px
		margin 0 0 0 -12px

	& &__sub-items
		margin-top 10px
		padding-left 15px

	& &__sub-item
		font-weight 400
		font-size 13px
		margin 5px 0

	& &__sub-item::before
		content "•"
		color #bbb
		font-size 25px
		margin 0 0 0 -15px

	& &__sub-sub-items
		padding 0 0 0 15px
		margin 0

	& &__sub-sub-item
		margin 3px 0

	& &__sub-sub-item::before
		@extend $font-bullet-ok
		color #66ba7a
		font-size inherit
		margin 0 0 0 -14px

	&__note
		font-size 85%
		color #656565

	@media tablet
		&__section:not(:first-child)
			margin-top 30px
			
		& &__section.columns__col // усиливаем селектор классом columns__col из-за псевдокласса в блоке columns
			display block
			width auto

		& &__col-title
			margin-bottom 15px

		& &__items,
		& &__item
			margin-top 15px