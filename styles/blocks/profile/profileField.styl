.profile-field
	@extend $profile-item

	padding 0
	display table-row

	&_editable
		position relative //- for overlay

	&_editable:not(&_editing):hover
		background #f9f8f0
		cursor pointer

	&:last-child
		border 0

	&:last-child &__content
		padding-bottom 32px

	&:last-child &__change
		padding-bottom 26px

	& &__inline-title
		margin 25px 0 0
		font-size 16px
		line-height 18px
		color #656565

	&__change
		position relative

		display none

		padding 11px 0

		width 100%

	&__name,
	&__value
		@extend $profile-item-border

		display table-cell

		white-space nowrap

	&__value-i,
	&__name
		box-sizing border-box

		position relative
		overflow auto

		width 100%
		padding 17px 50px 17px 40px


	&__name
		width 1px

	&_editable &__value-i::after
		@extend $font-pencil

		position absolute
		right 20px
		top 20px

		display none

		font-size 15px

		min-height 20px
		min-width 20px

		color #727272

	&:hover &__value-i::after
		display block

	&_editing &__value-i
		display none

	&_editing &__change
		display table
		width 100%

	&__value-i:empty::before
		content "—"

	&__labeled
		display table
		width 100%

	&__labeled-label,
	&__control
		display table-cell

	&__labeled-label


	&__control
		font-size 14px

	&_accounts &__control
		width calc(100% - 125px)

	//- using id for styling as an exception,
	//- theese id's won't appear anywhere else
	//- and we use them just to set size
	#profile-birth-day
		min-width 0
		width 50px
		margin-right 10px

	#profile-birth-month
		min-width 0
		width 90px
		margin-right 10px

	#profile-birth-year
		min-width 0
		width 70px

	#profile-tz
		width 230px

	#profile-about
		height 100px

	&__pass-change
		display inline-block
		margin-right 18px

	&__pass
		width 150px

	&__change-content,
	&__ok-cancel
		display table-cell
		vertical-align top

	&__change-content
		padding-right 15px

	&__ok-cancel
		width 1%
		white-space nowrap

	&__save
		margin 0 0 -1px // убираем смещение соседних пунктов в момент показа в Fx
		height 32px

	&__cancel
		@extend $button-reset
		color #568DCA
		font-size inherit
		margin-left 10px

	&__cancel:hover
		color link_hover_color
		text-decoration underline

	&__action
		@extend $profile-action-button

	&__tests
		display table
		width 100%

	&__test
		display table-row

	&__test-name,
	&__test-score,
	&__test-level,
	&__test-weaks
		display table-cell
		vertical-align top
		padding 20px 15px 20px 0
		border-top 1px solid #E4DDD2

	&__test:first-child &__test-name,
	&__test:first-child &__test-score,
	&__test:first-child &__test-level,
	&__test:first-child &__test-weaks
		padding-top 34px
		border 0

	&__test:last-child &__test-name,
	&__test:last-child &__test-score,
	&__test:last-child &__test-level,
	&__test:last-child &__test-weaks
		padding-bottom 30px

	&__test-name
		padding-left 23px
		width 33%

	&__test-score
		width 21%

	&__test-level
		width 15%

	&__test-weaks
		padding-right 23px

	&__test-legend
		font-size 12px
		color #727272
		margin-bottom 1px

	&__test-title
		font 18px/22px secondary_font
		margin 4px 0 4px

	&__test-percent
		font-size 28px
		color #4C906B
		margin 7px 0 0 3px