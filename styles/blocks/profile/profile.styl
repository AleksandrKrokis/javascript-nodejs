.profile
	&__tabs
		display table
		width 100%
		table-layout fixed
		border-collapse collapse

	&__tab
		display table-cell

	&__tab-content
		border-right 1px solid #d7d3c8
		padding 21px 20px
		text-align center
		background #e7e3d9
		font 15px/18px secondary_font

	&__tab:first-child &__tab-content
		border-radius 4px 0 0

	&__tab:last-child &__tab-content
		border-radius 0 4px 0 0
		border-right 0

	&__tab_current &__tab-content,
	&__content
		background #f7f6ea

	&__tab_current &__tab-link
		color inherit
		cursor inherit
		text-decoration inherit
		pointer-events none

	&__tab-link
		color #727272

	&__tab_current &__tab-content,
	&__tab-link:hover
		color #BB1000

@require './profileField.styl'
@require './profilePhoto.styl'