.banner-bottom
    position: relative;
    display none
    border: 1px solid #cfcfcf;
    min-height 147px

    &__link
        display block
        position absolute
        left 0
        right 0
        top 0
        bottom 0

    &__logo
        position: absolute;
        top: 0;
        bottom: 0;
        right: 47%;
        margin: auto 0;
        width: 411px;
        height: 75px


    &__slogan
        font-family: "Open Sans", sans-serif;
        color: #2788b5;
        font-weight: 500
        position: absolute;
        top: 7px;
        right: 0;
        bottom: 0;
        left: 59%;
        margin: auto;
        height: 60px;
        text-align: center;
        font-size: 30px;
        line-height: 31px


    &__slogan strong
        display: block

    &__disable
        position absolute
        right 0
        font-size 80%
        color #93918f
        top -20px



