{
  "apps":   [
    {
      "name":            "Javascript.ru",
      "script":          "bin/server",
      "node_args":       "--harmony",
      "instances":       "max",
      "exec_mode":       "cluster_mode",
      "env":             {
        "HOST": "127.0.0.1",
        "PORT": "3333"
      },
      "env_development": {
        "NODE_ENV": "development"
      },
      "env_production":  {
        "NODE_ENV": "production"
      }
    }
  ],
  "deploy": {
    "dev": {
      "user":        "root",
      "host":        "stage",
      "ref":         "origin/production",
      "repo":        "https://github.com/iliakan/javascript-nodejs",
      "path":        "/js/javascript-nodejs",
      "pre-deploy":  "cd /root/javascript-nodejs; bash ./update_prod.sh",
      "post-deploy": "pm2 startOrRestart ecosystem.json --env dev"
    }
  }
}
