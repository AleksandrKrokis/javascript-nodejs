{
  "apps":   [
    {
      "name":               "Javascript.ru",
      "script":             "bin/server",
      "instances":          "2",
      "node_args":          "--harmony_classes",
      "exec_mode":          "cluster_mode",
      "max_memory_restart": "2G",
      "log_file":           "/var/log/node/javascript.log",
      "error_file":         "/var/log/node/javascript-err.log",
      "out_file":           "/var/log/node/javascript-out.log",
      "env":                {
        "HOST":                        "127.0.0.1",
        "PORT":                        "3000",
        "PM2_GRACEFUL_LISTEN_TIMEOUT": 1000,
        "PM2_GRACEFUL_TIMEOUT":        5000
      },
      "env_production":     {
        "NODE_ENV":         "production",
        "SITE_HOST":        "https://learn.javascript.ru",
        "STATIC_HOST":      "https://js.cx",
        "ASSET_VERSIONING": "file"
      }
    }
  ],
  "deploy": {
    "nightly": {
      "user":        "root",
      "host":        "nightly",
      "pre-deploy":  "git pull origin master && NODE_LANG=ru NODE_ENV=production gulp deploy:pre",
      "path":        "/js/javascript-nodejs",
      "ref":         "origin/production",
      "repo":        "https://github.com/iliakan/javascript-nodejs",
      "test":        "echo 'no test on deploy right now'",
      "post-deploy": "NODE_LANG=ru NODE_ENV=production gulp deploy:post"
    },
    "yuri":    {
      "user":        "root",
      "host":        "yuri",
      "pre-deploy":  "git pull origin master && NODE_LANG=ru NODE_ENV=production gulp deploy:pre",
      "path":        "/js/javascript-nodejs",
      "ref":         "origin/production",
      "repo":        "https://github.com/iliakan/javascript-nodejs",
      "test":        "echo 'no test on deploy right now'",
      "post-deploy": "NODE_LANG=ru NODE_ENV=production gulp deploy:post"
    },
    "nightly-dev":    {
      "user":        "root",
      "host":        "nightly-dev",
      "pre-deploy":  "git pull origin master && NODE_LANG=ru NODE_ENV=production gulp deploy:pre",
      "path":        "/js/javascript-nodejs",
      "ref":         "origin/production",
      "repo":        "https://github.com/iliakan/javascript-nodejs",
      "test":        "echo 'no test on deploy right now'",
      "post-deploy": "NODE_LANG=ru NODE_ENV=production gulp deploy:post"
    }
  }
}
